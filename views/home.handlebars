<div class="page-content">
  <div class="spacer-block-20"></div>
  <div class="home-intro">
    <h1>
      Welcome to My Website!
    </h1>
  </div>
  <div class="spacer-block-40"></div>
  <div class="container">
    <h5 style="text-align: center">
      Here are some animal pictures for your amusement:
    </h5>
    <div id="homeCarousel" class="carousel slide" data-ride="carousel">
      <!-- indicators -->
      <ol class="carousel-indicators">
        <li data-target="#homeCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#homeCarousel" data-slide-to="1"></li>
        <li data-target="#homeCarousel" data-slide-to="2"></li>
      </ol>
      <!-- slide wrappers -->
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img
            class="d-block w-100"
            src="/images/turtle.jpg"
            alt="Sea Turtle"
          />
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/images/leopard.jpg" alt="Leopard" />
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/images/lion.jpg" alt="Lion" />
        </div>
      </div>
      <!-- carousel controls -->
      <a
        class="carousel-control-prev"
        href="#homeCarousel"
        role="button"
        data-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">
          Previous
        </span>
      </a>
      <a
        class="carousel-control-next"
        href="#homeCarousel"
        role="button"
        data-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">
          Next
        </span>
      </a>
    </div>
  </div>
</div>
